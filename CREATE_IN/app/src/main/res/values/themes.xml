<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Origin" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Personaliza el color primario -->
        <item name="colorPrimary">@color/deep_navy</item>
        <item name="colorPrimaryDark">@color/deep_navy</item>
        <item name="colorAccent">@color/ice_blue</item>
        <item name="android:windowBackground">@color/ice_blue</item>
    </style>

    <!-- Tema principal usado por la app -->
    <style name="Theme.Origin" parent="Base.Theme.Origin" />

    <!-- Tema exclusivo para el Splash con fondo azul -->
    <style name="Theme.Origin.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/ice_blue</item>
    </style>
</resources>
